{
  "manifest_version": 2,

  "name": "Selective Facebook Blocker",
  "description": "Allows the user to selectively block portions of Facebook",
  "version": "0.0.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background":{
    "scripts": ["background.js"],
    "persistent": false
  },
    

  //would prefer to do a browser action 
  //because you can access the popup from anywhere
  "browser_action":{
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }, //icon is ugly
    "default_title": "Selective Facebook blocker"
    //"default_popup": "popup.html"
  },

  //these run when the pages reload or are open
  //is not called when we change tabs
  "content_scripts": [{
    "matches": ["*://*.facebook.com/*", "*://*.messenger.com/*"],
    "css": ["chatContent.css", "notificationsContent.css"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],


  //may need to get rid of some restrictions
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "declarativeContent",
    "*://*.facebook.com/*",
    "*://*.facebook.com/", 
    "*://*.messenger.com/*"
  ]
}
