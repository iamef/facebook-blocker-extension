{
  "manifest_version": 2,

  "name": "Selective Facebook Blocker",
  "description": "Allows the user to have a more focused Facebook experience.",
  "version": "0.0.0.7",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background":{
    "scripts": ["background.js", "onFacebookListener.js"],
    "persistent": false
  },
    

  "browser_action":{
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }, 
    "default_title": "Selective Facebook blocker"
  },

  
  "content_scripts": [{
    "matches": ["*://*.facebook.com/*", "*://*.messenger.com/*"],
    "css": ["blockingCSS/chatContent.css", "blockingCSS/notificationsContent.css", "blockingCSS/newsfeedContent.css"],
    "js": ["onFacebook.js"],
    "run_at": "document_end"
  }],


  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "declarativeContent",
    "*://*.facebook.com/*",
    "*://*.facebook.com/", 
    "*://*.messenger.com/*"
  ]
}
